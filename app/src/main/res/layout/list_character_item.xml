<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/list_character_portrait"
        android:layout_width="@dimen/list_character_portrait"
        android:layout_height="@dimen/list_character_portrait"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        />

    <TextView
        android:id="@+id/list_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_character_portrait"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_quarter_margin"
        android:layout_toEndOf="@+id/list_character_portrait"
        android:text="@string/list_character_name_placeholder"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/list_character_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_character_name"
        android:layout_below="@+id/list_character_name"
        android:layout_marginTop="@dimen/fab_half_margin"
        android:text="@string/list_character_info_placeholder" />
</RelativeLayout>